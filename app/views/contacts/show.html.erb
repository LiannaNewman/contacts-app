<h1><%= @contact.first_name %> <%= @contact.last_name %></h1>
<h2>Email: <%= @contact.email %></h2>
<h2>Bio: <%= @contact.bio %></h2>
<h3><%= @contact.first_name %> belongs to:</h3>
<ul>
  <% @contact.groups.each do |group| %>
    <li><%= group.name %></li>
  <% end %>
</ul>
<%= link_to "Edit", "/contacts/#{@contact.id}/edit" %>
<%= link_to "Delete", "/contacts/#{@contact.id}", method: :delete %>
<%= link_to "Back", "/contacts" %>
